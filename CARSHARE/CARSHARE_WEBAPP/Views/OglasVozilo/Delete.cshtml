@model CARSHARE_WEBAPP.ViewModels.OglasVoziloVM 

@{ 
    ViewData["Title"] = "Delete car rent";  
} 

<h2>Delete car rent</h2> 

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this ad?</h4>
    <p><strong>Vehicle: </strong> @Model.Marka @Model.Model</p>
    <p><strong>User: </strong>@Model.Username</p> 
    <p><strong>Start Date: </strong>@Model.DatumPocetkaRezervacije.ToString("dd.MM.yyyy")</p>
    <p><strong>End Date: </strong>@Model.DatumZavrsetkaRezervacije.ToString("dd.MM.yyyy")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Idoglasvozilo" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
