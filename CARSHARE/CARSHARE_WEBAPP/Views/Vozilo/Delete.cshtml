@model CARSHARE_WEBAPP.ViewModels.VoziloVM

@{
    ViewData["Title"] = "Delete Vehicle";
}

<h2>Delete Vehicle</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this vehicle?</h4>
    <p><strong>Vehicle Name:</strong> @Model.Naziv</p>
    <p><strong>Brand:</strong> @Model.Marka</p>
    <p><strong>Model:</strong> @Model.Model</p>
    <p><strong>Registration:</strong> @Model.Registracija</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Idvozilo" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
