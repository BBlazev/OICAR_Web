@model CARSHARE_WEBAPP.ViewModels.VoziloDetailsVM   

<h2>Detalji vozila</h2>

@if (Model.Vozilo != null)
{
    <div>
        <p><strong>Marka:</strong> @Model.Vozilo.Marka</p>
        <p><strong>Model:</strong> @Model.Vozilo.Model</p>
        <p><strong>Registracija:</strong> @Model.Vozilo.Registracija</p>

        <h4>Vozač</h4>
        <p>@Model.Vozilo.Vozac.Ime @Model.Vozilo.Vozac.Prezime (@Model.Vozilo.Vozac.Username)</p>
    </div>

    @if (Model.IdentificationImages != null && Model.IdentificationImages.Any())
    {
        <h4>Prometne slike</h4>
        @foreach (var img in Model.IdentificationImages)
        {
            <div>
                <p><strong>@img.Name</strong></p>
                @if (!string.IsNullOrWhiteSpace(img.ContentBase64))
                {
                    <img src="data:image/jpeg;base64,@img.ContentBase64" alt="@img.Name" width="300" />
                }
                else
                {
                    <p style="color:red;">Slika nije dostupna.</p>
                }
            </div>
        }
    }
}
else
{
    <p style="color:red;">Greška pri dohvaćanju detalja vozila.</p>
}
