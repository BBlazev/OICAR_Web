@model List<CARSHARE_WEBAPP.ViewModels.ImageVM>
@{
    ViewData["Title"] = "Slike korisnika";
}

@section Styles {
    <style>
        :root {
            --bg-color:  #0d0d0d;
            --cream:     #f5f5dc;
            --item-bg:   #0d0d0d;
            --overlay:   rgba(0, 0, 0, 0.8);
        }
        body {
            background: var(--bg-color);
            color:      var(--cream);
            padding-bottom: 5rem;
        }
        h2 {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 2rem;
        }
        .gallery-container {
            background-color: var(--cream);
            padding: 2rem 1rem;
        }
        .gallery {
            display:               grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap:                   1rem;
            max-width:             1200px;
            margin:                0 auto;
        }
        .gallery-item {
            position:      relative;
            overflow:      hidden;
            background:    var(--item-bg);
            border:        2px solid var(--cream);
            border-radius: 8px;
            cursor:        pointer;
        }
        .gallery-item img {
            width:      100%;
            height:     auto;
            display:    block;
            transition: transform 0.3s ease, filter 0.3s ease;
            filter:     brightness(0.9);
        }
        .gallery-item:hover img {
            transform: scale(1.05);
            filter:    brightness(1.1);
        }
        .no-images {
            text-align: center;
            font-size: 1.2rem;
            margin: 3rem 0;
            color: var(--bg-color);
        }

        /* Lightbox */
        .lightbox {
            display:         none;
            position:        fixed;
            top: 0; left:    0;
            width:           100%; height: 100%;
            background:      var(--overlay);
            justify-content: center;
            align-items:     center;
            z-index:         9999;
        }
        .lightbox.active {
            display: flex;
        }
        .lightbox img {
            max-width:  90%;
            max-height: 85%;
            border:       4px solid var(--cream);
            border-radius: 8px;
        }
        .lightbox-close {
            position:    absolute;
            top:         20px;
            right:       30px;
            font-size:   2rem;
            color:       var(--cream);
            cursor:      pointer;
            user-select: none;
        }
        .lightbox-caption {
            margin-top: 1rem;
            text-align: center;
            font-size: 1.1rem;
            color: var(--cream);
        }

        /* Footer */
        .site-footer {
            position:   fixed;
            bottom:     0;
            left:       0;
            width:      100%;
            background: var(--cream);
            color:      var(--bg-color);
            text-align: center;
            padding:    1rem 0;
            font-size:  0.9rem;
            box-shadow: 0 -2px 8px rgba(0,0,0,0.4);
        }
        .site-footer a {
            color:         var(--bg-color);
            text-decoration: underline;
        }
    </style>
}

<h2>@ViewData["Title"]</h2>

<div class="gallery-container">
    @if (!Model.Any())
    {
        <p class="no-images">Nema slika.</p>
    }
    else
    {
        <div class="gallery">
            @foreach (var img in Model)
            {
                <div class="gallery-item">
                    <img src="data:image/jpeg;base64,@img.Base64Content"
                         alt="@img.Name"
                         data-name="@img.Name" />
                </div>
            }
        </div>
    }
</div>

<!-- Lightbox -->
<div id="lightbox" class="lightbox">
    <span class="lightbox-close">&times;</span>
    <div>
        <img id="lightbox-img" src="" alt="" />
        <div id="lightbox-caption" class="lightbox-caption"></div>
    </div>
</div>

<footer class="site-footer">
    © 2025 – CARSHARE_WEBAPP – <a asp-controller="Home" asp-action="Privacy">Privacy</a>
</footer>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.gallery-item img')
                .forEach(img => img.addEventListener('click', () => {
                    const lb = document.getElementById('lightbox');
                    document.getElementById('lightbox-img').src = img.src;
                    document.getElementById('lightbox-caption').textContent = img.dataset.name;
                    lb.classList.add('active');
                }));
            document.querySelector('.lightbox-close')
                .addEventListener('click', () =>
                    document.getElementById('lightbox').classList.remove('active')
                );
            document.getElementById('lightbox')
                .addEventListener('click', e => {
                    if (e.target === e.currentTarget)
                        e.currentTarget.classList.remove('active');
                });
        });
    </script>
}
