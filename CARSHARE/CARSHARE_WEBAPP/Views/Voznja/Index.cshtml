@model List<CARSHARE_WEBAPP.ViewModels.VoznjaVM>
@{
    ViewData["Title"] = "Lista vožnji";
}

@section Styles {
    <link rel="stylesheet" href="~/css/VoznjaSheet.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
}

<div class="container py-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <table id="ridesTable" class="display stripe hover" style="width:100%">
        <thead>
            <tr>
                <th>Id vožnje</th>
                <th>Vozilo ID</th>
                <th>Polazak</th>
                <th>Dolazak</th>
                <th>Troškovi ID</th>
                <th>Putnici</th>
                <th>Status ID</th>
                <th>Lokacija ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Idoglasvoznja</td>
                    <td>@r.Voziloid</td>
                    <td>@r.DatumIVrijemePolaska.ToString("g")</td>
                    <td>@r.DatumIVrijemeDolaska.ToString("g")</td>
                    <td>@r.Troskoviid</td>
                    <td>@r.BrojPutnika</td>
                    <td>@r.Statusvoznjeid</td>
                    <td>@r.Lokacijaid</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#ridesTable').DataTable({
                pageLength:    10,
                lengthChange:  false,
                language: {
                    paginate: {
                        previous: '<',
                        next:     '>'
                    },
                    zeroRecords:  "Nema pronađenih vožnji",
                    info:         "Prikaz _START_ do _END_ od _TOTAL_ vožnji",
                    infoEmpty:    "Prikaz 0 do 0 od 0 vožnji"
                }
            });
        });
    </script>
}
