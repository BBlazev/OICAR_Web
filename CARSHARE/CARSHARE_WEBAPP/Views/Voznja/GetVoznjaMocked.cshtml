@model List<CARSHARE_WEBAPP.ViewModels.VoznjaVM>

@{
    ViewData["Title"] = "Lista Vožnji";
}

<section class="voznja-list container">
    <h2 class="page-title">Lista Vožnji</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table id="ridesTable" class="stripe hover" style="width:100%">
        <thead>
            <tr>
                <th>Vozilo</th>
                <th>Polazak</th>
                <th>Dolazak</th>
                <th>Troskovi</th>
                <th>Putnici</th>
                <th>Status</th>
                <th>Lokacija</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Voziloid</td>
                    <td>@r.DatumIVrijemePolaska.ToString("g")</td>
                    <td>@r.DatumIVrijemeDolaska.ToString("g")</td>
                    <td>@r.Troskoviid</td>
                    <td>@r.BrojPutnika</td>
                    <td>@r.Statusvoznjeid</td>
                    <td>@r.Lokacijaid</td>
                </tr>
            }
        </tbody>
    </table>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/VoznjaSheet.css" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous">
    </script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js">
    </script>
    <script>
        $(document).ready(function () {
          $('#ridesTable').DataTable({
            pageLength: 10,
            lengthChange: false,
            language: {
              paginate: {
                previous: '<',
                next: '>'
              },
              zeroRecords: "Nema pronađenih vožnji",
              info: "Prikaz _START_ do _END_ od _TOTAL_ vožnji",
              infoEmpty: "Prikaz 0 do 0 od 0 vožnji"
            }
          });
        });
    </script>
}
