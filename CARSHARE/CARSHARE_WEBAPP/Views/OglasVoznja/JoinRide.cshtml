@model CARSHARE_WEBAPP.ViewModels.JoinRideVM

<div class="join-ride-container">
    <h2>Join Ride</h2>
    <form method="post" asp-action="JoinRide">
        <input type="hidden" asp-for="KorisnikId" />
        <input type="hidden" asp-for="OglasVoznjaId" />

        <div class="readonly-group">
            <label>Username:</label>
            <span>@Model.Username</span>
        </div>

        <div class="readonly-group">
            <label>Ime:</label>
            <span>@Model.Ime</span>
        </div>

        <div class="readonly-group">
            <label>Prezime:</label>
            <span>@Model.Prezime</span>
        </div>

        <div class="readonly-group">
            <label>Marka:</label>
            <span>@Model.Marka</span>
        </div>

        <div class="readonly-group">
            <label>Model:</label>
            <span>@Model.Model</span>
        </div>

        <div class="readonly-group">
            <label>Registracija:</label>
            <span>@Model.Registracija</span>
        </div>

        <div class="readonly-group">
            <label>Polaziste:</label>
            <span>@Model.Polaziste</span>
        </div>

        <div class="readonly-group">
            <label>Odrediste:</label>
            <span>@Model.Odrediste</span>
        </div>

        <div class="form-group">
            <label asp-for="LokacijaPutnik">Lokacija Putnik</label>
            <input type="text" asp-for="LokacijaPutnik" placeholder="Unesite lokaciju putnika" />
            <span asp-validation-for="LokacijaPutnik" class="error"></span>
        </div>

        <div class="form-group">
            <label asp-for="LokacijaVozac">Lokacija Vozač</label>
            <input type="text" asp-for="LokacijaVozac" placeholder="Unesite lokaciju vozača" />
            <span asp-validation-for="LokacijaVozac" class="error"></span>
        </div>

        <button type="submit" class="btn-submit">Pridruži se vožnji</button>
    </form>
</div>
