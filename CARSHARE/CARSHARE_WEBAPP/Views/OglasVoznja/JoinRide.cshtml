@model CARSHARE_WEBAPP.ViewModels.JoinRideVM

<style>
    .join-ride-container {
        max-width: 480px;
        margin: 40px auto;
        padding: 25px;
        background: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        font-family: Arial, sans-serif;
    }

    .join-ride-container h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .readonly-group {
        display: flex;
        justify-content: space-between;
        background: #fff;
        padding: 10px 15px;
        border-radius: 6px;
        border: 1px solid #ddd;
        font-size: 1rem;
        color: #555;
    }

    .readonly-group label {
        font-weight: 600;
        color: #222;
     }

    .btn-submit {
        margin-top: 25px;
        padding: 12px;
        background-color: #007bff;
        border: none;
        border-radius: 6px;
        color: white;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
        align-self: center;
        width: 60%;
    }

    .btn-submit:hover {   
        background-color: #0056b3;
     }
</style>

<div class="join-ride-container">
    <h2>Join Ride</h2>
    <form method="post" asp-action="JoinRide">
        <input type="hidden" asp-for="KorisnikId" />
        <input type="hidden" asp-for="OglasVoznjaId" />

        <div class="readonly-group">
            <label>Username:</label>
            <span>@Model.Username</span>
        </div>

        <div class="readonly-group">
            <label>Ime:</label>
            <span>@Model.Ime</span>
        </div>

        <div class="readonly-group">
            <label>Prezime:</label>
            <span>@Model.Prezime</span>
        </div>

        <div class="readonly-group">
            <label>Marka:</label>
            <span>@Model.Marka</span>
        </div>

        <div class="readonly-group">
            <label>Model:</label>
            <span>@Model.Model</span>
        </div>

        <div class="readonly-group">
            <label>Registracija:</label>
            <span>@Model.Registracija</span>
        </div>

        <div class="readonly-group">
            <label>Polaziste:</label>
            <span>@Model.Polaziste</span>
        </div>

        <div class="readonly-group">
            <label>Odrediste:</label>
            <span>@Model.Odrediste</span>
        </div>

        <button type="submit" class="btn-submit mt-3">Join</button>
    </form>
</div>
